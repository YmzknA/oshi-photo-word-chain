<%# フォームのエラーメッセージ表示領域 %>
<div id="new_post">
<% if @post.errors.any? %>
  <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
        </h3>
        <div class="mt-2 text-sm text-red-700">
          <ul class="list-disc list-inside">
            <% @post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= form_with model: post do |form| %>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">

    <%# Answer入力フィールド %>
    <div class="bg-gray-100 p-4 rounded-lg shadow-md border border-gray-200" style="background-image: url( <%= asset_path "marble_bg.png" %> )">
      <%= form.label "Answer", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name,
        maxlength: 20,
        class: "h-9 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Answer (max 20)" %>
    </div>

    <%# ヒント入力フィールド %>
    <div class="bg-gray-100 p-4 rounded-lg shadow-md border border-gray-200" style="background-image: url( <%= asset_path "marble_bg.png" %> )">
      <%= form.label "Hint (not necessary)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :body, 
        maxlength: 200,
        rows: 5,
        class: "mt-1 block w-full rounded-md  border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Hint or 推し語り (max 200)" %>
    </div>

    <%# URL入力フィールド %> 
    <div class="bg-gray-100 p-4 rounded-lg shadow-md border border-gray-200" style="background-image: url( <%= asset_path "marble_bg.png" %> )">
      <%= form.label "URL (not necessary)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :url, 
        class: "h-9 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "推しの参考URL" %>
    </div>


    <%# 画像アップロードフィールド %>
    <div class="bg-gray-100 p-4 rounded-lg shadow-md border border-gray-200" style="background-image: url( <%= asset_path "marble_bg.png" %> )">
      <%= form.label "Photo", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <div class="relative">
        <%= form.file_field :image, id: "file-upload", class: "hidden" %>
        <label for="file-upload" class="inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-600 hover:bg-indigo-50 cursor-pointer">
          Select a Photo!📷 
        </label>
      </div>
    </div>

    <%# 送信ボタン %>
    <div class="flex justify-end mt-6">
      <%= form.submit "Post", 
        class: "h-10 w-full inline-flex justify-center rounded-md border border-transparent bg-indigo-400 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-200" %>
    </div>
  </div>
<% end %>
</div>
