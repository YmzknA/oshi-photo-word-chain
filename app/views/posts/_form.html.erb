  <%# タイトル入力フィールド %>
  <div>
    <%= form.label "Answer", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name,
        class: "h-9 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Answer [~15文字]" %>
  </div>

  <%# 内容入力フィールド %>
  <div>
    <%= form.label "Hint", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :body, 
        class: "h-9 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "(必要なら)Hint [~15文字]" %>
  </div>

  <%# 画像アップロードフィールド %>
  <div>
    <%= form.label "Photo", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <div class="relative">
      <%= form.file_field :image, id: "file-upload", class: "hidden" %>
      <label for="file-upload" class="inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-600 hover:bg-indigo-50 cursor-pointer">
        Select a file
      </label>
    </div>
  </div>

  <%# 送信ボタン %>
  <div class="flex justify-end mt-6">
    <%= form.submit "Post", 
        class: "h-10 w-full inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-200" %>
  </div>
