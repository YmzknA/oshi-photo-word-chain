<%# フォームのエラーメッセージ表示領域 %>
<% if @post.errors.any? %>
  <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-red-800">
          <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
        </h3>
        <div class="mt-2 text-sm text-red-700">
          <ul class="list-disc list-inside">
            <% @post.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>

  <%# タイトル入力フィールド %>
  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Enter post title" %>
  </div>

  <%# 内容入力フィールド %>
  <div>
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_area :body, 
        rows: 4,
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm",
        placeholder: "Write your post content here..." %>
  </div>

  <%# 画像アップロードフィールド %>
  <div>
    <%= form.label :image, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.file_field :image, 
        class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
  </div>

  <%# 送信ボタン %>
  <div class="flex justify-end">
    <%= form.submit "Create Post", 
        class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition-colors duration-200" %>
  </div>
