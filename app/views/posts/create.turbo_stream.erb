<%= turbo_stream.replace "new_post" do %>
  <% if @post.errors.any? %>
    <%= render "form", post: @post %>
  <% else %>
    <%= render "form", post: Post.new %>
  <% end %>
<% end %>


<%# Flash 通知バー %>
<%= turbo_stream.replace "notice" do %>
  <%= render "shared/flash_bar" %>

  <% unless @post.errors.any? %>
    <%= render partial: "shared/twitter_share_button", locals: { post: @post, name: '最新の解答' } %>
  <% end %>
<% end %>

