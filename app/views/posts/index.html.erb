<%# Flash メッセージ用のスタイリッシュな通知バー %>
<% if notice %>
  <div class="bg-emerald-50 border-l-4 border-emerald-500 p-4 mb-8">
    <div class="flex">
      <div class="ml-3">
        <p class="text-emerald-700"><%= notice %></p>
      </div>
    </div>
  </div>
<% end %>

<% content_for :title, "Posts" %>

<%# メインコンテンツエリア %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  <div class="max-w-3xl mx-auto">
    <%# ヘッダーセクション %>
    <div class="border-b border-gray-200 pb-5 mb-8">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900">Posts</h1>
    </div>

    <%# 新規投稿フォーム %>
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-12">
      <div class="p-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-6">Create New Post</h2>
        <%= render "form", post: @post %>
      </div>
    </div>

    <%# 投稿一覧 %>
    <div class="space-y-8" id="posts">
      <% @posts.each do |post| %>
        <div class="bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow duration-300 overflow-hidden border border-gray-100">
          <div class="p-6">
            <%= render post %>
            <%= link_to "Show this post", post, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-50 hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
