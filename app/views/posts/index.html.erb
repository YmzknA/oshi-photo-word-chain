<div class="bg-white py-6 sm:py-8 lg:py-12">
  <div class="mx-auto max-w-screen-2xl px-4 md:px-8">

    <p class="mb-5 kaisei-decol-regular mx-auto max-w-screen-md text-center text-gray-500 md:text-lg">好きなものの写真を投稿して、しりとりを楽しもう！</p>
    <!-- text - start -->
    <div class="mb-10 md:mb-16">
      <%# 新規投稿フォーム %>
      <div class="bg-indigo-200 rounded-lg shadow-sm border border-gray-200 mb-12">
        <div class="p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Create New Post</h2>

          <div id="new_post">
            <%# フォームのエラーメッセージ表示領域 %>
            <% if @post.errors.any? %>
              <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
                <div class="flex">
                  <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">
                      <%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:
                    </h3>
                    <div class="mt-2 text-sm text-red-700">
                      <ul class="list-disc list-inside">
                        <% @post.errors.each do |error| %>
                          <li><%= error.full_message %></li>
                        <% end %>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>

            <%= form_with model: @post do |form| %>
              <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-5">
                <%= render "form", form: form %>
              </div>
            <% end %>

          </div>
        </div>
      </div>

    </div>

    <div id="posts" class="grid gap-4 sm:grid-cols-2 md:gap-6 lg:grid-cols-3 xl:grid-cols-4 xl:gap-8">
      <!-- article - start -->
      <% @posts.each do |post| %>
        <%= render partial: "posts/post", locals: { post: post } %>
      <% end %>
    </div>
  </div>
</div>

<%= turbo_stream_from "posts_channel" %>
