<div class="bg-white text-center rounded-lg shadow-2xl overflow-hidden border-4 border-purple-600">
  <div class="p-6 text-gray-500">
    <div id="<%= dom_id post %>">
      <div class="text-sm text-gray-500 mb-7 flex justify-center justify-between">
        <p>
        Photo by: <%= link_to post.user.name, user_path(post.user), class: "text-base text-blue-500 hover:underline" %> | Post at: <%= post.created_at.in_time_zone('Asia/Tokyo').strftime("%Y/%m/%d %H:%M") %>
      </p>
      <div class="flex justify-end">
        <%= render partial: "/twitter_share_button", locals: { post: post, name: '？？？' } %>
      </div>
      </div>
      <p class="text-xl font-semibold  mb-5 text-purple-600">
      <strong>New Post</strong>
      </p>

      <p>
      <strong>Answer:</strong>
    <p class="text-2xl"> ？？？ </p>
    </p>
    <% if post.body.present? %>
      <p class="text-lg font-semibold">
      <strong>hint:</strong>
      <%= post.body %>
      </p>
    <% else %>
      <p class="text-xl font-semibold">
      no hint  
      </p>
    <% end %>
    <% if post.image.present? %>
      <div class="mt-4 flex justify-center">
        <%= image_tag post.image.width_only.url, width: "500", class: "rounded-lg shadow-md" %>
      </div>
    <% end %>
    </div>
  </div>
</div>
