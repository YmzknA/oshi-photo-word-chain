<div class="bg-white text-center rounded-lg shadow-2xl overflow-hidden border-4 border-purple-600">
  <div class="p-6 text-gray-500">
    <div id="<%= dom_id post %>">
      <p class="text-xl font-semibold  mb-2 text-purple-600">
        <strong>New Post</strong>
      </p>
      <p>
        <strong>Answer:</strong>
        <p class="text-2xl"> ？？？ </p>
      </p>
      <% if post.body.present? %>
        <p class="text-lg font-semibold">
          <strong>hint:</strong>
          <%= post.body %>
        </p>
      <% else %>
        <p class="text-xl font-semibold">
          no hint  
        </p>
      <% end %>
      <% if post.image.present? %>
        <div class="mt-4 flex justify-center">
          <%= image_tag post.image.url, width: "500", class: "rounded-lg shadow-md" %>
        </div>
      <% end %>
    </div>
    <div class="mt-6">
      <%= link_to "Show this post", post, class: "inline-flex items-center px-3 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-purple-200 hover:bg-indigo-50 duration-200" %>
    </div>
  </div>
</div>
