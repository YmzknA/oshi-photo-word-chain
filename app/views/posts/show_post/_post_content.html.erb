<div class="bg-white rounded-lg text-center shadow-xl hover:shadow-2xl transition-shadow duration-300 overflow-hidden border border-gray-100">
<div class="p-6">
<div id="<%= dom_id post %>">
    <p>
      <strong>Answer:</strong>
      <p class="text-xl">
        <%= post.name %>
      </p>
    </p>

  <% if post.body.present? %>
  <p>
    <strong>Hint:</strong>
    <p class="text-2xl">
      <%= post.body %>
    </p>
  </p>
  <% else %>
    <p class="text-xl">
      no hint
    </p>
  <% end %>

  <% if post.image.present? %>
    <div class="mt-4 flex justify-center">
      <%= image_tag post.image.url, width: "500" %>
    </div>
  <% end %>

</div>

<%= link_to "show this post", post, class: "mt-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-indigo-700 bg-indigo-50 hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
</div>
</div>
