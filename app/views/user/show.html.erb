  <div class="bg-white py-6 sm:py-8 lg:py-12">
    <div class="mx-auto max-w-screen-2xl px-4 md:px-8">
      <% if @user.posts.any? %>
        <div class="mb-6 flex items-end justify-between gap-4">
          <% if @user == current_user %>
            <h2 class="text-2xl font-bold text-gray-800 lg:text-3xl">My Posts</h2>
          <% else %>
            <h2 class="text-2xl font-bold text-gray-800 lg:text-3xl"><%= @user.name %>'s Posts</h2>
          <% end %>
          <!-- Optional: Link to "show more" posts -->
          <a href="<%= posts_path %>" class="inline-block rounded-lg border bg-white px-4 py-2 text-center text-sm font-semibold text-gray-500 outline-none ring-indigo-300 transition duration-100 hover:bg-gray-100 focus-visible:ring active:bg-gray-200 md:px-8 md:py-3 md:text-base">Return Photos</a>
        </div>

      <div class="grid gap-x-4 gap-y-6 sm:grid-cols-2 md:gap-x-6 lg:grid-cols-3 xl:grid-cols-4">
        <% @user.posts.each do |post| %>
          <div>
            <%= render "posts/post", post: post %> 
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="mb-6 flex items-center justify-center">
        <p class="text-gray-500">You have no posts yet.</p>
      </div>
    <% end %>
  </div>
</div>

<!-- user_show_hiddneクラスの要素全てにhiddneを追加する -->
<script>
  document.querySelectorAll('.user_show_hidden').forEach(function(element) {
    element.classList.add('hidden');
  });
</script>
