<section class="bg-white">
  <div class="container flex items-center justify-center min-h-screen px-6 mx-auto">
    <div class="w-full max-w-md">
      <div class="flex justify-center mx-auto bg-indigo-50">
        <%= image_tag "/logo.png", width: "90" %>
      </div>

      <div class="flex items-center justify-center mt-6">
        <a href="#"
           class="w-1/3 pb-4 font-medium text-center text-gray-800 capitalize border-b-2 border-blue-500">
          Sign in
        </a>
        <a href="<%= new_registration_path(resource_name) %>"
           class="w-1/3 pb-4 font-medium text-center text-gray-500 capitalize border-b">
          Sign up
        </a>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full mt-6" }) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <!-- Email Field -->
        <div class="relative mt-4">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                placeholder: "Email address",
                class: "block w-full py-3 pl-10 pr-3 text-gray-700 bg-white border rounded-lg focus:border-blue-400 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" %>
        </div>

        <!-- Password Field -->
        <div class="relative mt-4">
          <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <%= f.password_field :password,
                autocomplete: "current-password",
                placeholder: "Password",
                class: "block w-full py-3 pl-10 pr-10 text-gray-700 bg-white border rounded-lg focus:border-blue-400 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" %>
        </div>

        <!-- Remember Me Checkbox -->
        <div class="mt-4">
          <label class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 text-blue-500 border-gray-300 rounded focus:ring-blue-400" %>
            <span class="ml-2 text-sm text-gray-600">Remember me</span>
          </label>
        </div>

        <!-- Submit Button -->
        <div class="mt-6">
          <%= f.submit "Sign In",
              class: "w-full px-6 py-3 text-sm font-medium tracking-wide text-white capitalize transition-colors duration-300 transform bg-blue-500 rounded-lg hover:bg-blue-400 focus:outline-none focus:ring focus:ring-blue-300 focus:ring-opacity-50" %>
        </div>
      <% end %>

      <div class="mt-6 text-center space-y-2">
        <a href="<%= new_password_path(resource_name) %>" class="text-sm text-blue-500 hover:underline block">
          Forgot your password?
        </a>
        <a href="<%= new_registration_path(resource_name) %>" class="text-sm text-blue-500 hover:underline block">
          Don't have an account?
        </a>
      </div>
    </div>
  </div>
</section>
